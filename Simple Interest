package com.lululemon.assessment;

import java.util.Scanner;

public class SimpleInterest {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int p=sc.nextInt();
		int t=sc.nextInt();
		int r=sc.nextInt();
		
		float SI=(p*t*r)/100;
		float total=p+SI;
		System.out.println("Total amount paid after Loan duration is Rs."+total);
	}
}
